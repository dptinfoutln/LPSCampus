<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ihm.AjoutDataPourSalle">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/scanList"
        android:onClick="launch"
        android:text="Launch Scan" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomDeLaSalle"
        android:hint="Nom de la salle"
        android:text=""/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nomDeLaSalle"
        android:id="@+id/motDePasse"
        android:hint="Info du scan"
        android:text=""/>

    <EditText
        android:id="@+id/ip3"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/motDePasse"
        android:textColor="#8C8A8A"
        android:hint="IP" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ip3"
        android:id="@+id/scanList"/>

</RelativeLayout>