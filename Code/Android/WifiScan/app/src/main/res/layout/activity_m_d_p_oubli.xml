<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ihm.MDPOubli">

    <FrameLayout
        android:id="@+id/frameOubli"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/texteOubli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Formulaire mot de passe oublié"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/texteOubliDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entrez votre adresse mail de connexion afin qu'un nouveau mot de passe vous soit envoyé"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_below="@id/texteOubli"/>

    <EditText
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrez votre adresse mail"
        android:layout_below="@id/texteOubliDesc"/>

    <Button
        android:id="@+id/envoyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:layout_alignBottom="@id/frameOubli"
        android:onClick="envoyer"/>

</RelativeLayout>